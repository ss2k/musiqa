          <p>John Mayer - Gravity</p>
        </div>

        <div id="tags-home">
          <h2>Tags</h2>
          <hr>
          <div id="tag_cloud">
            <% tag_cloud Question.tag_counts, %w[s m l] do |tag, css_class| %>
              <%= link_to tag.name, "#", :class => css_class %>
            <% end %>
          </div>
        </div>

      </div>

